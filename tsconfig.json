{
  "compilerOptions": {
    "lib": ["es2017"],
    "target": "es5",
    "baseUrl": "./src/",
    "paths": {
      "*": ["*", "src/@types/*"] //,
    },
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "types": ["mocha", "node", "chai"],
    // "noEmit": true,
    // "allowJs": true,
    // "jsx": "react",
    "skipLibCheck": true,
    // rules
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noImplicitThis": true,
    "noUnusedParameters": true
  },
  "compileOnSave": true,
  "include": ["src", "src/@types/*"],
  "exclude": ["node_modules", "public", ".cache", ".git", ".vscode"],
  "typeRoots": ["./src/@types/", "src/@types", "../node_modules/@types"]
}
